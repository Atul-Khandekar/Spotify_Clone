<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.spotifyclone.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/actionHomeFragmentToTrackListFragment"
            app:destination="@id/trackListFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/homeFragment"
            app:popUpToSaveState="true"
            />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.spotifyclone.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchSongFragment"
            app:destination="@id/searchSongFragment"
            app:popUpToSaveState="true"
            app:popUpTo="@id/searchFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.spotifyclone.ui.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_trackListFragment"
            app:destination="@id/trackListFragment"
            app:popUpTo="@id/libraryFragment"
            app:popUpToSaveState="true"
            />
    </fragment>
    <fragment
        android:id="@+id/trackListFragment"
        android:name="com.example.spotifyclone.ui.TrackListFragment"
        android:label="fragment_track_list"
        tools:layout="@layout/fragment_track_list">

        <argument
            android:name="playlistId"
            app:argType="string" />
        <argument
            android:name="type"
            app:argType="com.example.spotifyclone.models.local.MediaItemType" />

    </fragment>
    <fragment
        android:id="@+id/searchSongFragment"
        android:name="com.example.spotifyclone.ui.SearchSongFragment"
        android:label="fragment_search_song"
        tools:layout="@layout/fragment_search_song" />

</navigation>