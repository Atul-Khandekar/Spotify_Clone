<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/section_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section_placeholder"
        android:textColor="@color/primary_white"
        android:textSize="@dimen/section_font_size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/section_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        tools:listitem="@layout/item_horizontal_recycler_view"
        tools:itemCount="4"
        />


</androidx.constraintlayout.widget.ConstraintLayout>