<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.spotifyclone.models.local.HomePageData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_start_end_45"
        android:background="@color/black">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/section_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.section}"
            android:textColor="@color/primary_white"
            android:textSize="@dimen/section_font_size_24"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start_end_10"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_placeholder"
            tools:itemCount="2"
            tools:listitem="@layout/item_horizontal_recycler_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>