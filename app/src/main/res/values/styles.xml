<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="landing_page_style">

        <item name="android:textColor">@color/primary_white</item>
        <item name="android:textSize">@dimen/landing_page_size_28</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="primary_button">
        <item name="backgroundColor">@color/black</item>
        <item name="cornerRadius">45dp</item>
    </style>

    <style name="button_title">
        <item name="android:textSize">@dimen/button_text_size</item>

        <item name="android:textColor">@color/primary_white</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_black</item>
        <item name="strokeColor">@color/primary_white</item>
        <item name="strokeWidth">@dimen/button_border_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:fontWeight">700</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom_13</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom_13</item>
    </style>

    <style name="sign_up_titles">

        <item name="android:textSize">@dimen/sign_up_title_20</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_up_text_field" >
        <item name="android:background">@drawable/shape_text_field_background</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
        <item name="android:paddingStart">@dimen/text_field_start_12</item>

    </style>

    <style name="button_next">
        <item name="backgroundTint">@color/primary_light_grey</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="cornerRadius">@dimen/button_next_corner_21</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom_13</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom_13</item>
    </style>

    <style name="NavigationDrawer">

        <item name="android:fontWeight">700</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="navigation_top_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/navigation_title_text_size_28</item>
        <item name="fontWeight">700</item>
    </style>

</resources>